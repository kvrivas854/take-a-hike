{
  "name": "take-a-hike",
  "version": "1.0.0",
  "main": "index.js",
  "root": "build/",
  "repository": "https://github.com/kvrivas854/take-a-hike.git",
  "author": "Chris Maffei <cmaffei720@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@mars/heroku-js-runtime-env": "^3.0.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "sequelize": "^5.15.1"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node index.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*' NODE_OPTIONS=--max-http-header-size=1000000\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": "10.16.0"
  }
}
